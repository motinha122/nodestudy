const EventEmitter = require('events');

class Character extends EventEmitter{
    constructor(name){
        super();
        this.name = name;
    }
    emitHelp() {
        this.emit('help');
    }
}

const chapolin = new Character('Chapolin');

chapolin.on('help' , ()=>console.log(`Eu! o ${chapolin.name} colorado!`));
console.log("Quem poder√° me defender?");
chapolin.emit('help');